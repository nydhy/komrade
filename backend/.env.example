# komrade Backend Environment
# Copy to .env and adjust values

# App
APP_NAME=komrade
DEBUG=false

# Database (PostgreSQL 18 - port 5433)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/vetbridge

# JWT (use: openssl rand -hex 32)
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# AI providers
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemini-3-flash-preview:latest
AI_PROVIDER=ollama

# MongoDB
MONGO_URI=mongodb://localhost:27017

# ElevenLabs Speech-to-Text
ELEVENLABS_API_KEY=
